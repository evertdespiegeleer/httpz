{
  "name": "@zhttp/core",
  "description": "A minimal, strongly typed HTTP library with Zod validation",
  "author": "Evert De Spiegeleer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evertdespiegeleer/zhttp.git"
  },
  "version": "0.0.10",
  "type": "module",
  "types": "./dist/types/main.d.ts",
  "exports": {
    "import": {
      "types": "./dist/types/main.d.ts",
      "default": "./dist/esm/main.js"
    },
    "require": {
      "types": "./dist/types/main.d.ts",
      "default": "./dist/cjs/main.cjs"
    }
  },
  "files": [
    "./dist",
    "./readme.md"
  ],
  "engines": {
    "node": "^20.10.x",
    "npm": "^10.2.3"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "npx rollup ./dist/esm/main.js --file ./dist/cjs/main.cjs --format cjs",
    "test": "node --test --test-reporter spec --test-reporter-destination stdout --test-reporter junit --test-reporter-destination=./test-report.xml --loader ts-node/esm ./src/**/*.test.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@zhttp/errors": "0.0.10",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1",
    "@types/chai": "^4.3.11",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "chai": "^5.0.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "@zhttp/errors": "0.0.10",
    "zod": "^3.22.4"
  }
}
