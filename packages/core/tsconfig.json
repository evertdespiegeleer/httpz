{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            // Not really sure why we need this, but remove it and we've got an esm issue with the tests running in Github CI
            "@zhttp/errors*": [
                "../errors",
                "../errors/src",
                "../errors/src/main.ts",
            ],
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true,
    },
}