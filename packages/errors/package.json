{
  "name": "@zhttp/errors",
  "description": "Error library extending @zhttp/core",
  "author": "Evert De Spiegeleer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evertdespiegeleer/zhttp.git"
  },
  "version": "0.0.8-fix-esm-cjs-issues.3",
  "type": "module",
  "types": "./dist/types/main.d.ts",
  "exports": {
    "import": {
      "types": "./dist/types/main.d.ts",
      "default": "./dist/esm/main.js"
    },
    "require": {
      "types": "./dist/types/main.d.ts",
      "default": "./dist/cjs/main.cjs"
    }
  },
  "files": [
    "./dist",
    "./readme.md"
  ],
  "engines": {
    "node": "^20.10.x",
    "npm": "^10.2.3"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "npx rollup ./dist/esm/main.js --file ./dist/cjs/main.cjs --format cjs",
    "test": "echo \"No tests here :)\""
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "zod": "^3.22.4"
  }
}
